<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
<!--Header: links and small logo-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
    <!--Home link-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
            <TextView
                android:id="@+id/linkSearch"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#031c3d"
                android:textSize="15dp"
                android:text="Search"
                android:paddingLeft="10dp"
                android:textStyle="italic" />
        </LinearLayout>
    <!--End Home link-->
    <!--Logo-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    <!--End Logo-->
    <!--Logout link-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <TextView
                android:id="@+id/linkLogout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#031c3d"
                android:layout_gravity="right"
                android:textSize="15dp"
                android:text="Logout"
                android:paddingRight="10dp"
                android:textStyle="italic" />
        </LinearLayout>
    <!--End Logout link-->
    </LinearLayout>
<!--End Header-->
<!--Form-->
    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="#031c3d"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Add Book" />
    <EditText
        android:id="@+id/isbn"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:background="@drawable/EditTextRoundedCorners"
        android:layout_gravity="center"
        android:textColor="#b2b0b0"
        android:layout_marginTop="5dp"
        android:hint="ISBN"
        android:textColorHint="#c6c4c4"
        android:paddingLeft="15dp" />
    <EditText
        android:id="@+id/bookName"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:background="@drawable/EditTextRoundedCorners"
        android:layout_gravity="center"
        android:textColor="#b2b0b0"
        android:layout_marginTop="5dp"
        android:hint="Book Name"
        android:textColorHint="#c6c4c4"
        android:paddingLeft="15dp" />
    <EditText
        android:id="@+id/author"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:background="@drawable/EditTextRoundedCorners"
        android:layout_gravity="center"
        android:textColor="#b2b0b0"
        android:layout_marginTop="5dp"
        android:hint="AuthorID"
        android:textColorHint="#c6c4c4"
        android:paddingLeft="15dp" />
    <EditText
        android:id="@+id/category"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:background="@drawable/EditTextRoundedCorners"
        android:layout_gravity="center"
        android:textColor="#b2b0b0"
        android:layout_marginTop="5dp"
        android:hint="CategoryID"
        android:textColorHint="#c6c4c4"
        android:paddingLeft="15dp" />
    <EditText
        android:id="@+id/numberCopies"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:background="@drawable/EditTextRoundedCorners"
        android:layout_gravity="center"
        android:textColor="#b2b0b0"
        android:layout_marginTop="5dp"
        android:hint="Qty available copies"
        android:textColorHint="#c6c4c4"
        android:paddingLeft="15dp" />
    <Button
        android:id="@+id/btnAddBook"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ButtonRoundedCorners"
        android:layout_gravity="center"
        android:text="Add Book"
        android:textColor="#ffffff" />
<!--End Form-->
</LinearLayout>